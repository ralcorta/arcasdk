{
  "name": "arcasdk-monorepo",
  "version": "0.1.0",
  "description": "Arca TypeScript SDK Monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:core": "npm run build --workspace=@arcasdk/core",
    "test": "npm run test --workspaces",
    "test:core": "npm run test --workspace=@arcasdk/core",
    "test:integration:core": "npm run test:integration:auto --workspace=@arcasdk/core",
    "example:create-invoice": "ts-node --project packages/core/tsconfig.json examples/create-invoice.ts",
    "doc": "typedoc --theme oxide --name 'arca.ts' --out docs packages/core/src/index.ts",
    "wsdl-gen": "wsdl-to-ts --",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "author": "valiuLab",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.6.2",
    "@types/jest": "^29.5.1",
    "@types/node": "^24.10.1",
    "@types/node-forge": "^1.3.2",
    "@types/soap": "^0.18.0",
    "@types/underscore": "^1.11.5",
    "@types/xml2js": "^0.4.11",
    "copyfiles": "^2.4.1",
    "jest": "^28.1.3",
    "rimraf": "^5.0.7",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4",
    "vitepress": "1.2.3",
    "wsdl-to-ts": "^0.2.3",
    "wsdl-tsclient": "^1.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ralcorta/arcasdk.git"
  },
  "bugs": {
    "url": "https://github.com/ralcorta/arcasdk/issues"
  },
  "homepage": "https://github.com/ralcorta/arcasdk#readme"
}
