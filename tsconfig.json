{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@arcasdk/core": ["./packages/core/src"],
      "@arcasdk/core/*": ["./packages/core/src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true
  },
  "files": [],
  "exclude": [
    "node_modules",
    "packages/*/lib",
    "packages/*/tests",
    "packages/*/src"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "references": [
    {
      "path": "./packages/core"
    }
  ]
}
